<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>

<%= link_to book_path(@book.id) do %> <!--一覧画面へのリンク-->
  <p>Show</p>
<% end %>
<p>|</p>
<%= link_to books_path do %> <!--一覧画面へのリンク-->
  <p>Back</p>
<% end %>
