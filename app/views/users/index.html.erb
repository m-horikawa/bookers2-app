<main>
    <% if flash[:notice] %>
    <p id="notice">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/list', user: @user %> <!--User infoの部分テンプレート-->
        <%= render 'books/list', book: @book %> <!--New Bookの部分テンプレート-->
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thread>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </thread>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to user_path(user.id) do %>
                Show
                <% end %>
              </td>
            </th>
            <% end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
